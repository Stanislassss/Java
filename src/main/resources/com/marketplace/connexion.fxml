<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marketplace.controllers.ConnexionController">
    <children>
        <Label text="Connexion" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="motDePasseField" promptText="Mot de passe" />
        <Button onAction="#handleConnexion" text="Se connecter" />
        <Button onAction="#handleInscription" text="S'inscrire" />
    </children>
</VBox>